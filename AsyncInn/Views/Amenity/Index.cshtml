@model IEnumerable<AsyncInn.Models.Amenity>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<body>
    <header>
        <h2>Amenities</h2>
        <div class="itemcount">
            <p>Count</p>
            <p>@Html.TextBox("count", Model.Count().ToString())</p>
        </div>
        <p>This is a complete list of all amenities available for installation in rooms at Async Inn locations.</p>
        <p>
            <a asp-action="Create">Click here to new amenities that can be installed in rooms.</a>
        </p>
        <p>
            <a asp-controller="Home"
               asp-action="Index">Go Home</a>
        </p>
    </header>
    <form asp-controller="Amenity" asp-action="Index" method="get" class="form-group">
        <p>
            <input type="text" placeholder="Enter search criteria" name="SearchString">
            <input type="submit" value="Search" class="btn btn-primary">
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="item-links">
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
