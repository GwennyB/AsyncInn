@model AsyncInn.Models.Inventory

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<body>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomNumber" />
            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>                        
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PetsOK" /> @Html.DisplayNameFor(model => model.PetsOK)
                </label>
            </div>
            <input type="hidden" asp-for="HotelID" />
            <div class="form-group">
                <label asp-for="RoomPlanID" class="control-label"></label>
                <select asp-for="RoomPlanID" class="form-control" asp-items="ViewBag.RoomPlanID"></select>
                <span asp-validation-for="RoomPlanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="backtolist">
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
